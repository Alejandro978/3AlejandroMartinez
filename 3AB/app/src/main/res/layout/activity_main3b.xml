<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3b"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿QUÉ DESEA HACER?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="100dp">

        <Button
            android:id="@+id/btnCrearProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3b-Crear Profesor"
            android:onClick="btnParaProfesor"/>

        <Button
            android:id="@+id/btnCrearAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3B- Crear Alumno"
            android:onClick="btnParaAlumno"/>

        <Button
            android:id="@+id/btnCrearUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3A-Crear Usuario"
            android:onClick="btnParaUsuario"/>
        <Button
            android:id="@+id/btnConsultas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3C-Consultas varias"
            android:onClick="btnParaConsultas"/>
    </LinearLayout>
</LinearLayout>
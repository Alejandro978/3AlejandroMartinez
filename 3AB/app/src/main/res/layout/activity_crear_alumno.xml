<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearAlumno"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Crear Alumno"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        >


        <EditText
            android:id="@+id/campoNombreAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre Alumno"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/campoEdadAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Edad Alumno"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/campoCicloAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ciclo Alumno"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text=""
            android:textSize="24sp" />

        <EditText
            android:id="@+id/campoCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Curso Matriculado"
            android:inputType="textPersonName"
            android:text=""
            android:padding="5dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Usuario"
            android:onClick="crearAlumno"
            />
    </LinearLayout>
</LinearLayout>